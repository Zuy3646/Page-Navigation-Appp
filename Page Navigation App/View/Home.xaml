<UserControl x:Class="Page_Navigation_App.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Page_Navigation_App.View"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="622"
             >

    <Grid>

        <Border CornerRadius="0,20,20,0" Margin="0,5,5,0">

            <Image Source="/Images/Home_page.png"
                   Stretch="Fill" />

        </Border>

        <TextBlock Text="Golden Hive Honey" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 450">
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFEAAD" Offset="0.0"/>
                    <GradientStop Color="#FFDC83" Offset="0.25"/>
                    <GradientStop Color="#FFC453" Offset="0.75"/>
                    <GradientStop Color="#EFA036" Offset="1.0"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

        <Image Source="/Images/Honey.png" Width="350" Height="450" Margin="0 130 0 0"/>

    </Grid>
</UserControl>
